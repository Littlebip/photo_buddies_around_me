<div id="carousel<%= my_pics.id %>" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carousel<%=my_pics.id%>" data-slide-to="0" class="active"></li>
    <li data-target="#carousel<%=my_pics.id%>" data-slide-to="1" class = "active"></li>
    <li data-target="#carousel<%=my_pics.id%>" data-slide-to="2" class = "active"></li>
  </ol>
  <div class="carousel-inner">

    <% my_pics.photos.each do |pic| %>
        <% if pic == my_pics.photos.first %>
          <div class="carousel-item active">
            <%= cl_image_tag pic.key, crop: :fill %>
          </div>
        <% else %>
          <div class="carousel-item">
            <%= cl_image_tag pic.key, crop: :fill %>
          </div>
        <% end %>
      <% end %>
  </div>
  <a class="carousel-control-prev" href="#carousel<%=my_pics.id%>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel<%=my_pics.id%>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
