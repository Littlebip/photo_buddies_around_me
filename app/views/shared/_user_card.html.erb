<div class="card-user">
  <%= link_to "/pages/#{user.id}" do %>
    <div class="user-avatar"><%= cl_image_tag user.photo.key, height: 80, width: 80, radius: 40, crop: :fill %></div>
    <div class="card-user-infos">
      <h2><%= user.username.capitalize %></h2>
      <p><%= user.description %></p>
    </div>
    <i class="fa-solid fa-chevron-right"></i>
  <% end %>
</div>
