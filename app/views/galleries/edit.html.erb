<h2>Edit Gallery</h2>

<%= simple_form_for([@user, @gallery], url: user_gallery_path(@user, @gallery), method: :patch) do |form| %>
  <%= form.error_notification %>

  <div class="form-inputs">
    <%= form.input :name %>

  </div>

  <div class="form-actions mt-4">
    <%= form.button :submit, class: "btn btn-danger cgb mt-4" "Update Gallery" %>
  </div>
<% end %>

<%= link_to "Back", profile_path %>
