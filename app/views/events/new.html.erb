<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <%= simple_form_for @event, data: { controller: 'flatpickr' } do |f| %>
        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :date, as: :string, input_html: { data: { flatpickr_target: "date" } } %>
          <%= f.input :images, as: :file %>
        </div>
        <div class="form-actions">
          <%= f.submit %>
        </div>
        <% end %>
    </div>
  </div>
</div>
